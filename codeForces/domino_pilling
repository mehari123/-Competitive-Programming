import java.util.Scanner;
public class Demono {
    public static void main(String[] args){

      Scanner scan  =new Scanner(System.in);
      int num1,num2;

      num1=scan.nextInt();
      num2=scan.nextInt();
      int output=0;
      if ((num1*num2)%2==0){
              output=(num2*num1)/2;
        }
      else if ((num1*num2)%2!=0){
            output=((num1*num2)-1)/2;
      }
    System.out.print(output);
}
}
